model User {
    id         String     @id @default(uuid())
    name       String
    email      String     @unique
    password   String
    role       Role       @default(TOURIST)
    profilePic String?
    bio        String?
    isVerified Boolean?   @default(false)
    status     UserStatus @default(Active)
    languages  String[] // Common Field: Languages Spoken

    // Guide-specific fields
    expertise String[] @default([]) // e.g., History, Nightlife, Shopping
    dailyRate Int? // How much they charge per day

    // Tourist-specific fields
    travelPreferences String[] @default([]) // Travel preferences (added for tourists)

    // Auth provider info
    authProvider String? // "credentials" | "google"
    providerId   String? // ID from provider if not using credentials

    // Relations
    listings Listing[]
    bookings Booking[] @relation("UserBookings")
    reviews  Review[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
